include $HOME/.config/sway/config.d/windows

#
# Volume, Monitor brightness, Media players
#
    bindsym $mod+F3 exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym $mod+F2 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    bindsym $mod+F1 exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym $mod+Shift+F1 exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
    bindsym $mod+Shift+F3 exec pactl set-source-volume @DEFAULT_SOURCE@ +5%
    bindsym $mod+Shift+F2 exec pactl set-source-volume @DEFAULT_SOURCE@ -5%
    bindsym $mod+F8 exec brightnessctl s +10%
    bindsym $mod+F7 exec brightnessctl s 10%-
    bindsym $mod+p exec playerctl play-pause
    bindsym $mod+Plus exec playerctl next
    bindsym $mod+o exec playerctl previous

